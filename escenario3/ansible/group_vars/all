mods_enabled:
  - rewrite


# URL del repositorio
biblioteca_repo_url: "https://github.com/VidaInformatico/Sistema-de-biblioteca-basico-php-8-y-mysql.git"

# Opcional: ruta base donde se alojar치n los DocumentRoot
base_web_path: "/var/www/biblioteca"


