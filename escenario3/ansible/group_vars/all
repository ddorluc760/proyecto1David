# Lista con diccionarios para indicar los datos de los virtualhost que se van a crear:
# apache2
virtualhosts:
  - name: biblioteca
    datos:
      nameserver: www.biblioteca.org 
      documentroot: /var/www/biblioteca
      errorlog: error_biblioteca
      accesslog: access_biblioteca


